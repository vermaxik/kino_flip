<!DOCTYPE html>
<html>
  <head>
    <title>KinoFlip</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  
    <div class="container">
      <div class="columns">
        <div class="column">
          <div class="hero hero-sm bg-dark">
            <div class="hero-body">
              <%= link_to root_path do %>
                <h1>KinoFlip</h1>
              <% end %>
              <p>Find the best movies by rating</p>
                <form action="/search" method="get">
                  <div class="input-group input-inline search">
                    <input class="form-input" type="text" name="query" placeholder="search">
                    <button class="btn btn-primary input-group-btn">Search</button>
                  </div>
                </form>
            </div>
          </div>
        </div>
      </div>
      <%= yield %>
    </div>
  </body>
</html>
